<Window x:Class="PR2_Belov.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR2_Belov"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Label Content="Просмотр погоды" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="18" Height="38"/>
        <ScrollViewer Margin="10,70,10,70" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelWeather" Height="auto" Width="auto"/>
        </ScrollViewer>
        <Label x:Name="lableLoad" Content="Загрузка..." HorizontalAlignment="Center" Margin="0,193,0,0" VerticalAlignment="Top" FontSize="18" Height="38"/>
        <Button x:Name="buttonMinus" Content="Прошлые 25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="45" Width="100" Margin="10,0,0,10" Click="buttonMinus_Click"/>
        <Button x:Name="buttonPlus" Content="Следующие 25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Height="45" Width="100" Margin="0,0,10,10" Click="buttonPlus_Click"/>


    </Grid>
</Window>
